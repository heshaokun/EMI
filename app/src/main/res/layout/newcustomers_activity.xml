               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignBaseline="@+id/New_tv2"
               android:layout_alignBottom="@+id/New_tv2"
               android:layout_toEndOf="@+id/New_tv2"
               android:layout_toRightOf="@+id/New_tv2"
               android:hint="11位手机号" />
       </RelativeLayout>

