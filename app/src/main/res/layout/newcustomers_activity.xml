            android:layout_alignLeft="@+id/New_tv3"
            android:layout_alignStart="@+id/New_tv3"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="16dp"
            android:text="银行"
            android:textColor="#FF000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/New_etText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/New_tv4"
            android:layout_alignBottom="@+id/New_tv4"
            android:layout_toEndOf="@+id/New_tv4"
            android:layout_toRightOf="@+id/New_tv4"
            android:hint="11位手机号" />
