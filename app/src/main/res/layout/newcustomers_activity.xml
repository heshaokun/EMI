            android:id="@+id/New_etText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/New_tv3"
            android:layout_toLeftOf="@+id/New_ShangChuan2"
            android:layout_toRightOf="@+id/New_tv3"
            android:layout_toStartOf="@+id/New_ShangChuan2"
            android:hint="请上传银行卡照片" />

        <ImageView
            android:id="@+id/New_ShangChuan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/New_tv3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/shangchuan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/Set_tv"
            android:layout_alignRight="@+id/Set_tv"
            android:layout_below="@+id/New_tv3"
            android:background="#FFF2F2F2"
            android:id="@+id/textView2" />

        <TextView
            android:id="@+id/New_tv4"
            android:layout_width="wrap_content"
