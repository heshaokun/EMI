       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/New_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               android:text="身份证号"
               android:textColor="#FF000000"
               android:textSize="20sp"
               android:layout_margin="10sp"/>

           <EditText
               android:id="@+id/New_etText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/New_etText2"
               android:layout_alignParentTop="true"
               android:layout_alignStart="@+id/New_etText2"
               android:layout_toLeftOf="@+id/New_ShangChuan"
               android:layout_toStartOf="@+id/New_ShangChuan"
               android:hint="请上传身份证照片" />

           <ImageView
               android:id="@+id/New_ShangChuan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@+id/New_tv"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:layout_marginEnd="16dp"
               android:layout_marginRight="16dp"
               android:src="@mipmap/shangchuan" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:layout_alignEnd="@+id/Set_tv"
               android:layout_alignRight="@+id/Set_tv"
               android:layout_below="@+id/New_tv"
               android:background="#FFF2F2F2"
               android:id="@+id/textView" />

           <TextView
               android:id="@+id/New_tv2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignLeft="@+id/New_tv"
               android:layout_alignStart="@+id/New_tv"
               android:layout_below="@+id/textView"
               android:layout_marginTop="16dp"
               android:text="手机号码"
               android:textColor="#FF000000"
               android:textSize="20sp" />

           <EditText
