<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:background="@drawable/shape">

        <TextView
            android:id="@+id/LeiBie_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:text="客户类别" />

        <TextView
            android:id="@+id/Chlid_One"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/LeiBie_Text"
            android:background="@drawable/beijing_button"
            android:text="合作社" />

        <TextView
            android:id="@+id/Chlid_Two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/Chlid_One"
            android:background="@drawable/beijing_button"
            android:text="种植户" />

        <TextView
            android:id="@+id/Chlid_Three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/Chlid_Two"
            android:background="@drawable/beijing_button"
            android:text="经销商" />

        <TextView
            android:id="@+id/Chlid_Four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/Chlid_One"
            android:layout_below="@id/Chlid_One"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="15sp"
            android:background="@drawable/beijing_text"
            android:text="玉米" />

        <TextView
            android:id="@+id/Chlid_Five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Chlid_One"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_toRightOf="@id/Chlid_Four"
            android:background="@drawable/beijing_button"
            android:text="大豆" />

        <TextView
            android:id="@+id/Chlid_six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Chlid_One"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_toRightOf="@id/Chlid_Five"
            android:background="@drawable/beijing_text"
            android:text="其他" />

        <TextView
            android:id="@+id/Xian_One"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/Chlid_Five"
            android:layout_marginTop="15sp"
            android:background="@color/colorPrimary" />


        <RelativeLayout
            android:id="@+id/One_Relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Xian_One"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/ZhiZhao_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="营业执照" />

            <EditText
                android:id="@+id/Yi_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@+id/ZhiZhao_Text"
                android:layout_toRightOf="@+id/ZhiZhao_Text"
                android:hint="请上传营业执照" />

            <ImageView
                android:id="@+id/One_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/ZhiZhao_Text"
                android:src="@mipmap/shangchuan" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Xian_Two"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/One_Relative"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/Two_Relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Xian_Two"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/ShenFen_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="身份证号" />

            <EditText
                android:id="@+id/Er_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_toEndOf="@+id/ShenFen_Text"
                android:layout_toRightOf="@+id/ShenFen_Text"
                android:hint="请上传法人身份证照片" />

            <ImageView
                android:id="@+id/Two_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ShenFen_Text"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/shangchuan" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Xian_Three"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/Two_Relative"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/Three_Relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Xian_Three"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/DianHua_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="联系电话" />

            <EditText
                android:id="@+id/San_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/DianHua_Text"
                android:layout_toRightOf="@+id/DianHua_Text"
                android:hint="请填写合作社的联系电话" />


        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:background="@drawable/shape">

        <RelativeLayout
            android:id="@+id/Four_Relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/ZhangHao_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="开户账号" />

            <EditText
                android:id="@+id/Si_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/ZhangHao_Text"
                android:layout_toRightOf="@+id/ZhangHao_Text"
                android:hint="请上传开户许可证照片" />

            <ImageView
                android:id="@+id/Four_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/shangchuan" />
        </RelativeLayout>

        <TextView
            android:id="@+id/Xian_Four"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/Four_Relative"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/Five_Relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Xian_Four"
            android:layout_margin="10sp">

            <TextView
                android:id="@+id/YinHang_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="银行" />

            <EditText
                android:id="@+id/Wu_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Five_Image"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:layout_toEndOf="@+id/YinHang_Text"
                android:layout_toRightOf="@+id/YinHang_Text"
                android:hint="请选择银行" />

            <ImageView
                android:id="@+id/Five_Image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:background="@drawable/beijing_button"
        android:text="下一步" />


</LinearLayout>
