<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F4F9">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/the_max_bg">

        <TextView
            android:id="@+id/TheGrowth_DKLB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="地块列表"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/TheGrowth_DKLB"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_margin="20sp"
            android:background="@drawable/shape"
            android:hint="请输入文字..."
            android:paddingLeft="32dp"
            android:singleLine="true"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivDeleteText"

            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/etSearch"
            android:layout_alignStart="@+id/etSearch"
            android:layout_alignTop="@+id/etSearch"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:paddingRight="20dp"
            android:src="@mipmap/the_sou"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9EAFF">

        <TextView
            android:id="@+id/TheGrowth_KeHu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="客户"
            android:textColor="#FF060606"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TheGrowth_MuShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="地块总亩数"
            android:textColor="#FF060606"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/TheGrowth_DiKuai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:text="地块"
            android:textColor="#FF060606"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/TheGrowth_Xian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="康平县"
        android:textColor="#FF060606"
        android:textSize="15sp" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/The_Recy"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>